<UserControl x:Class="MeasureConsole.Controls.mfc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeasureConsole"
             mc:Ignorable="d" 
             >
    <Grid>
        <Button Click="Button_Click">
            <Grid>
                <Image Source="/icons/mfc_off.png"  Stretch="None" VerticalAlignment="Top"/>
                <Label x:Name="lbValue" Content="-" HorizontalAlignment="Center" Margin="0,10,0,0"></Label>
            </Grid>
        </Button>
        
    </Grid>
</UserControl>
